    basic:
        type:           basic
        description:    Authenticaiton for users via the administration console
    apiKey:
        type:           apiKey
        description:    Authenticaiton for providers (e.g. services, oauth, portal, internal apps)
        name:           X-Api-Key
        in:             header
security:
    -
      basic: []
      apiKey: []
tags:
    -
        name:           security
        x-type:         resource
    -
        name:           tokens
        x-type:         resource
